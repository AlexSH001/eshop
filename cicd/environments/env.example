# Application Configuration
NODE_ENV=production
FRONTEND_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
NEXT_PUBLIC_APP_NAME=E-Shop

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=eshop
DB_USER=eshop_user
DB_PASSWORD=your_strong_database_password_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_strong_redis_password_here

# JWT Configuration
JWT_SECRET=your_64_character_jwt_secret_here_change_this_in_production
JWT_REFRESH_SECRET=your_64_character_refresh_secret_here_change_this_in_production

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Security Configuration
SECURE_COOKIES=true
HTTPS_ONLY=true
STRICT_TRANSPORT_SECURITY=true
CONTENT_SECURITY_POLICY=true

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=5242880

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Database Connection Pool
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=2000

# Redis Connection Pool
REDIS_POOL_MAX=10
REDIS_POOL_IDLE_TIMEOUT=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *

# Performance Configuration
CACHE_TTL=3600
IMAGE_OPTIMIZATION=true
CDN_ENABLED=true

# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@yourdomain.com

# Payment Configuration
# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Alipay Configuration
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key
ALIPAY_GATEWAY_URL=https://openapi.alipaydev.com/gateway.do

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here 